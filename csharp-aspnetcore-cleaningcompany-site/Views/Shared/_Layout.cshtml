<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!--Styles-->
    <link href="~/css/reset.css" rel="stylesheet" />
    <link href="~/css/icons.css" rel="stylesheet" />
    <link href="~/css/generic.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/about.css" rel="stylesheet" />
    <link href="~/css/services.css" rel="stylesheet" />
    <link href="~/css/contact.css" rel="stylesheet" />
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- Libraries and other -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <!--Header-->
    <header>
        <div class="conteiner header-container">
            <a class="header-logo" asp-controller="Home" asp-action="Index">
                <img src="~/img/enterprise/header-logo.png" alt="Header-Logo" />
            </a>
            <nav class="header-navigation">
                <ul class="header-navlist">
                    <li class="header-navlist-item">
                        <a class="header-navlist-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="header-navlist-item">
                        <a class="header-navlist-link" asp-controller="Home" asp-action="About">About us</a>
                    </li>
                    <li class="header-navlist-item">
                        <a class="header-navlist-link" asp-controller="Home" asp-action="Services">Services</a>
                    </li>
                </ul>
            </nav>
            <div class="header-contact">
                <a class="contact-link" asp-controller="Home" asp-action="Contact"> <i class="fa-regular fa-calendar-days"></i> Leave a request</a>
            </div>
        </div>
    </header>

    <!--Main Body-->
    @RenderBody()

    <!--Footer-->
    <!--Scripts-->
    <script src="https://kit.fontawesome.com/08d17af8c0.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
</body>
</html>